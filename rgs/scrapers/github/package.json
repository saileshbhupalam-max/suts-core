{
  "name": "@rgs/scraper-github",
  "version": "1.0.0",
  "description": "RGS GitHub Scraper - Scrapes issues and discussions from GitHub repositories",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "type-check": "tsc --noEmit",
    "lint": "eslint src __tests__ --ext .ts --max-warnings 0",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "ci": "npm run type-check && npm run lint && npm run test:coverage"
  },
  "keywords": [
    "rgs",
    "github",
    "scraper",
    "issues",
    "discussions"
  ],
  "author": "SUTS Core Team",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@rgs/core": "workspace:*",
    "@rgs/utils": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
