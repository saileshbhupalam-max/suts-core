{
  "name": "@rgs/scrapers-twitter",
  "version": "1.0.0",
  "description": "Twitter/X scraper for RGS with API v2 integration and rate limiting",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "ci": "npm run type-check && npm run lint && npm run test:coverage"
  },
  "keywords": [
    "rgs",
    "twitter",
    "x",
    "scraper",
    "api-v2",
    "rate-limiting"
  ],
  "author": "SUTS Core Team",
  "license": "MIT",
  "dependencies": {
    "@rgs/core": "workspace:*",
    "@rgs/utils": "workspace:*",
    "twitter-api-v2": "^1.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
