{
  "name": "@rgs/validation",
  "version": "1.0.0",
  "description": "RGS Validation Framework - A/B testing to prove RGS improves SUTS accuracy",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "ci": "npm run type-check && npm run lint && npm run test:coverage"
  },
  "keywords": [
    "rgs",
    "validation",
    "a-b-testing",
    "accuracy",
    "metrics"
  ],
  "author": "SUTS Core Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
