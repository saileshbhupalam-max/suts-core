{
  "name": "@suts/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Synthetic User Testing System - A reusable testing framework for simulating realistic user behavior",
  "workspaces": [
    "packages/*",
    "plugins/*",
    "rgs/*"
  ],
  "scripts": {
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit --passWithNoTests",
    "test:integration": "jest --config jest.config.integration.js",
    "test:integration:smoke": "jest --config jest.config.integration.js tests/integration/smoke",
    "test:integration:contracts": "jest --config jest.config.integration.js tests/integration/contracts",
    "test:integration:e2e": "jest --config jest.config.integration.js tests/integration/e2e",
    "test:integration:stress": "jest --config jest.config.integration.js tests/integration/stress",
    "test:all": "npm run test && npm run test:integration",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --build --force",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "ci": "npm run type-check && npm run lint && npm run test:coverage",
    "clean": "tsc --build --clean && rm -rf coverage dist",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@octokit/rest": "^20.1.2",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "snoowrap": "^1.23.0",
    "twitter-api-v2": "^1.17.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/suts-core.git"
  },
  "keywords": [
    "testing",
    "synthetic-users",
    "simulation",
    "llm",
    "user-testing"
  ],
  "author": "SUTS Core Team",
  "license": "MIT"
}
